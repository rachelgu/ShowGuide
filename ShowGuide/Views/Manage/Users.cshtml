@model IEnumerable<ShowGuide.Models.ApplicationUser>

@{
    ViewBag.Title = "Utilizadores";
}

<h2>@ViewBag.Title</h2>

<div class="card">
    <div class="card-body">
        @using (Html.BeginForm("Userss", "Manage", FormMethod.Get, new { @class = "row" }))
        {
            <div class="form-group col-lg mt-2 mb-2">
                <input type="search" name="search" class="form-control col-12" value="@ViewBag.search" />
            </div>
            <div class="col-lg-2  mt-2 mb-2">
                <button type="submit" class="btn btn-success col-12">Pesquisar</button>
            </div>
            <div class="col-12 text-center">
                <div class="card">
                    <div class="form-group mb-1 mt-1">
                        <div class="form-check d-md-inline">
                            <label class="form-check-label">
                                @Html.RadioButton("filtroAdmin", -1, (int)ViewBag.filtroVistos == -1)Todos
                            </label>
                        </div>
                        <div class="form-check d-md-inline">
                            <label class="form-check-label">
                                @Html.RadioButton("filtroAdmin", 0, (int)ViewBag.filtroVistos == 0)Só os Administradores
                            </label>
                        </div>
                        <div class="form-check d-md-inline">
                            <label class="form-check-label">
                                @Html.RadioButton("filtroAdmin", 1, (int)ViewBag.filtroVistos == 1)Só os não Administradores
                            </label>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<div class="card mt-4">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                Administrador?
            </th>
        </tr>

        @foreach (var user in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => user.Nome)
                </td>
                <td>
                    @using (Html.BeginForm("ToggleAdmin", "Manage", FormMethod.Post, new { @class = "d-inline" }))
                    {

                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => user.Id)
                        @Html.CheckBox("isAdministrator",user.Roles.Any(r => r.RoleId == ViewBag.adminId), new { onchange="this.form.submit()"})
                    }
                </td>
            </tr>
        }
        @if (Model.Count() == 0)
        {

            <tr>
                <td colspan="2" style="text-align: center;">
                    Não foram encontradas categorias.
                </td>
            </tr>
        }

    </table>
</div>